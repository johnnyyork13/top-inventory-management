extends layout 

block content 
  section(class="form-container")
    h2=title 
    form(method="post" action="/inventory/all")
      input(name="name" placeholder="Item Name")
      br
      input(name="description" placeholder="Item Description")
      br
      input(name="category" placeholder="Item Category")
      br
      input(name="price" placeholder="Item Price")
      br
      select(name="sellerID" placeholder="Select Seller")
        each seller in seller_list 
          option(value=`${seller._id}`) #{seller.sellerName}
      br
      button(type="submit") Submit
