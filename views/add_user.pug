extends layout 

block content
  section(class="form-container")
    h2 Add User 
    form(action="/users/all" method="post")
      input(name="userFirstName" type="text" placeholder="First Name" required="true")
      br
      input(name="userLastName" type="text" placeholder="Last Name" required="true")
      br
      input(name="userEmail" type="email" placeholder="Email" required="true")
      br
      button(type="submit") Submit