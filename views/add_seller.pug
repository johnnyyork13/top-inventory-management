extends layout 

block content
  section(class="form-container")
    h2 Add Seller 
    form(action="/sellers/all" method="post")
      if alertMessage 
        label(for="sellerUsername" style="color: red;") Username already exists
      input(name="sellerUsername" type="text" placeholder="Username" required="true" class=`${alertMessage}`)
      br
      input(name="sellerName" type="text" placeholder="Seller Name" required="true")
      br
      input(name="sellerEmail" type="email" placeholder="Email" required="true")
      br
      input(name="sellerPhone" type="phone" placeholder="Phone" required="true")
      br
      button(type="submit") Submit